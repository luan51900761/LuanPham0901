                </div>
                <!-- Right -->
            </section>
            <!-- Section: Social media -->
            <!-- Section: Links  -->
            <section class="">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <!-- Content -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                <i class="fas fa-gem me-3"></i>ALKTRAVEL
                            </h6>
                            <p>
                                CÓ TÂM - CÓ TẦM 
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                Sản Phẩm
                            </h6>
                            <p>
                                <a href="@Url.Action("Index","Schedule")" class="text-reset">Đặt vé</a>
                            </p>
                            <p>
                                <a href="@Url.Action("Index","Schedule")" class="text-reset">Xem lịch</a>
                            </p>
                            <p>
                                <a href="@Url.Action("Search","KiGuiUser")" class="text-reset">Tra cứu</a>
                            </p>
                            <p>
                                <a href="@Url.Action("About","Start")" class="text-reset">Về chúng tôi</a>
                            </p>
                        </div>

                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                LIÊN HỆ
                            </h6>
                            <p><i class="fas fa-home me-3"></i> 19 Nguyễn Hữu Thọ, Tân Phong, Quận 7, TP.HCM</p>
                            <p>
                                <i class="fas fa-envelope me-3"></i>
                                ALKTravel@gmail.com
                            </p>
                            <p><i class="fas fa-phone me-3"></i> 0965412293</p>
                            <p><i class="fas fa-print me-3"></i> 0965412294</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->
            <!-- Copyright -->
            <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
                © 2021 Copyright:
                <a class="text-reset fw-bold" href="https://mdbootstrap.com/">ALKTRAVEL.COM</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->
    </div>
</body>
</html>
<script src="~/Asset/js/myjs.js"></script>
<link href="~/Asset/css/mycss.css" rel="stylesheet" />

