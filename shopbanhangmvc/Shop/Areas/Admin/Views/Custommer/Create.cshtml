@model EF.EF.nhanvien
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Thêm nhân viên
}
@{
    ViewBag.Title = "Create";
}
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Mã nhân viên
            <div class="col-md-10">
                @Html.EditorFor(model => model.manv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.manv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên nhân viên
            <div class="col-md-10">
                @Html.EditorFor(model => model.tennv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tennv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            ngày sinh
            <div class="col-md-10">
                @Html.EditorFor(model => model.ngaysinh, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.ngaysinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giới tính
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.gioitinh,
                                                     new List<SelectListItem> {
                                                          new SelectListItem { Value = "Nam" , Text = "Nam" },
                                                          new SelectListItem { Value = "Nữ" , Text = "Nữ" }
                                                          


                                                       },
                                                     new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.gioitinh, "", new { @class = "text-danger" })
             </div>
        </div>

        <div class="form-group">
            Địa chỉ
            <div class="col-md-10">
                @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            CNND/CCCD
            <div class="col-md-10">
                @Html.EditorFor(model => model.cmnd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cmnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Sô điện thoại
            <div class="col-md-10">
                @Html.EditorFor(model => model.dienthoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dienthoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Email
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Hình ảnh
            <div class="col-md-10">
                @Html.EditorFor(model => model.hinhanh, new { htmlAttributes = new { @type = "file" } })
                @Html.ValidationMessageFor(model => model.hinhanh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Loại nhân viên
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.maloainv,
                                      new List<SelectListItem> {
                                           new SelectListItem { Value = "LNV01" , Text = "Quản Lí" },
                                           new SelectListItem { Value = "LNV02" , Text = "Lơ Xe" },
                                           new SelectListItem { Value = "LNV03" , Text = "Trực Bàn" },
                                            new SelectListItem { Value = "LNV04" , Text = "Tài Xế" }


                                        },
                                      new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maloainv, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tài khoản
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.username, new SelectList(ViewBag.username), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
    }

</div>
