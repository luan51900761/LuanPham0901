
@model EF.EF.chuyenxe
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Thêm chuyến xe
}
@{
    ViewBag.Title = "Create";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.time-mask').inputmask("hh:mm:ss", {
            placeholder: "hh:mm:ss",
            showMaskOnHover: false
        });
    });
</script>
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Mã chuyến
                <div class="col-md-10">
                    @Html.EditorFor(model => model.machuyen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.machuyen, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Tên chuyến xe
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenchuyen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenchuyen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã tuyến
                <div class="col-md-10">
                    @Html.DropDownListFor(x=>x.matuyen, new SelectList(ViewBag.matuyen), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.matuyen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Giờ đi
                <div class="col-md-10">
                    @Html.EditorFor(model => model.giodi, new { htmlAttributes = new { @class = "form-control time-mask" } })

                    @Html.ValidationMessageFor(model => model.giodi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Giờ đến
                <div class="col-md-10">
                    @Html.EditorFor(model => model.gioden, new { htmlAttributes = new { @class = "form-control time-mask" } })
                    @Html.ValidationMessageFor(model => model.gioden, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                ngày đi
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ngaydi, new{ @class="form-control",@type = "date" })        
                    @Html.ValidationMessageFor(model => model.ngaydi, "", new { @class = "text-danger" })
                        </div>
            </div>

            <div class="form-group">
                Nhân viên lơ xe
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.manv, new SelectList(ViewBag.loxe), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.manv, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã xe
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.maxe, new SelectList(ViewBag.maxe), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maxe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã tài xế
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.matx, new SelectList(ViewBag.mataixe), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.matx, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>
