@model EF.EF.account
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    <h1>Tạo tài khoản</h1>
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <script src="~/Asset/js/myjs.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-2 mb-1">
                    Tên tài khoản
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2 mb-1">
                    Mật khẩu
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @id = "password", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 mb-1">
                    Nhập lại mật khẩu
                </div>
                <div class="col-md-10 mb-1">
                    <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="confirm Password" onkeyup="check();">
                    <span id='message'></span>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2 mb-1">
                    Vai trò
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.role,
                                      new List<SelectListItem> {
                                           new SelectListItem { Value = "Admin" , Text = "Quản lí" },
                                           new SelectListItem { Value = "Employee" , Text = "Nhân viên" },
                                           new SelectListItem { Value = "Custommer" , Text = "Khách hàng" }
                                        },
                                      new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center" style="padding: 0 14px">
                <div class="mr-5">
                    @Html.ActionLink("Back to List", "Index")
                    @Model
                </div>
                <button type="submit" class="btn btn-primary px-5" id="btn-create" disabled>Tạo mới</button>
            </div>
        </div>

        }

       
    </div>
    <link href="~/Asset/css/mycss.css" rel="stylesheet" />

</body>


</html>
