
@model EF.EF.xe    
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Thêm xe mới
}
@{
    ViewBag.Title = "Create";
}
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Mã xe
            <div class="col-md-10">
                @Html.EditorFor(model => model.maxe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.maxe, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tên xe
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenxe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenxe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Biển số
            <div class="col-md-10">
                @Html.EditorFor(model => model.bienso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bienso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
    }

</div>
